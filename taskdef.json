{
  "family": "langchain-redis-api",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "ECS_EXECUTION_ROLE_ARN",
  "taskRoleArn": "ECS_TASK_ROLE_ARN",
  "containerDefinitions": [
    {
      "name": "api",
      "image": "IMAGE_URI",
      "essential": true,
      "portMappings": [{ "containerPort": 8080, "protocol": "tcp" }],
      "environment": [
        { "name": "ENVIRONMENT", "value": "green" },
        { "name": "LLM_MODEL", "value": "gpt-4o-mini" }
      ],
      "secrets": [
        { "name": "OPENAI_API_KEY", "valueFrom": "OPENAI_API_KEY_SECRET_ARN" },
        { "name": "REDIS_URL", "valueFrom": "REDIS_URL_SECRET_ARN" }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "python -c \"import urllib.request; urllib.request.urlopen('http://127.0.0.1:8080/health')\""],
        "interval": 10,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 10
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/langchain-redis-api",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
